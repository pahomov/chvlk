{
  "compilerOptions": {
    "target": "es2017",
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,	
    "noUnusedParameters": true,	
    "noImplicitReturns": true,	
    "noFallthroughCasesInSwitch": true,
    "outDir": "lib"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.snapshot.ts"
  ]
}